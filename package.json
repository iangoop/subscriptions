{
  "name": "firebase",
  "version": "1.0.0",
  "description": "Firebase development environment to support microservices and FE nodes",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev -w @subscriptions/microservices\" \"npm run dev -w @subscriptions/pilot\"",
    "emulators": "dotenvx run -f env/development.env -f packages/microservices/env/development.env -- firebase emulators:start",
    "build:pilot": "npm run build -w @subscriptions/pilot",
    "build:microservices": "npm run build -w @subscriptions/microservices",
    "build:pilot:dev": "dotenvx run -f packages/pilot/env/development.env -- npm run build -w @subscriptions/pilot"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.5.0",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "concurrently": "^9.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.3.3"
  }
}
